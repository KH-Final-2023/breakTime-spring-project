<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="chat-mapper">
	
	<resultMap type="chatMessage" id="chatMessageResultSet">
		<result column="CM_NO" property="cmNo" />
		<result column="MESSAGE" property="message" />
		<result column="CREATE_DATE" property="createDate" />
		<result column="BU_NO" property="buNo" />
		<result column="USER_NO" property="userNo" />
		<result column="USER_ID" property="userId"/>
	</resultMap>
	
	<!-- 채팅방 참여여부 확인 -->
	<select id="joinCheck" resultType="_int" parameterType="chatRoomJoin">
		SELECT COUNT(*)
		FROM CHAT_ROOM_JOIN
		WHERE BU_NO = #{buNo}
		AND USER_NO = #{userNo}
	</select>
	
	<select id="joinCheckBu" resultType="_int" parameterType="chatRoomJoinBu">
		SELECT COUNT(*)
		FROM CHAT_ROOM_JOIN_BU
		WHERE BU_NO = #{buNo}
	</select>
	
	<!-- 채팅방 참여하기 -->
	<insert id="joinChatRoom" parameterType="chatRoomJoin">
		INSERT INTO CHAT_ROOM_JOIN
		VALUES (#{userNo}, #{buNo})
	</insert>
	
	<insert id="joinChatRoomBu" parameterType="chatRoomJoinBu">
		INSERT INTO CHAT_ROOM_JOIN_BU
		VALUES (#{buNo})
	</insert>
	
	<!-- 채팅 메세지 목록 조회 -->
	<select id="selectChatMessage" resultMap="chatMessageResultSet">
		SELECT
			MESSAGE,
			CREATE_DATE,
			USER_NO,
			USER_ID
		FROM CHAT_MESSAGE
		JOIN MEMBER USING(USER_NO)
		WHERE BU_NO = #{buNo}
		ORDER BY CM_NO
	</select>
	
	<!--  채팅 메세지 삽입 -->
	<insert id="insertMessage" parameterType="chatMessage">
		INSERT INTO CHAT_MESSAGE
		VALUES (SEQ_CM_NO.NEXTVAL, #{message}, DEFAULT, #{buNo}, #{userNo})
	</insert> 
	
	<insert id="insertMessageBu" parameterType="chatMessageBu">
		INSERT INTO CHAT_MESSAGE_BU
		VALUES (SEQ_CM_NO.NEXTVAL, #{message}, DEFAULT, #{buNo})
	</insert> 
	
</mapper>
